mixin sCatalog(data)
	// start sCatalog
	+b.SECTION.sCatalog.section#sCatalog&attributes(attributes)
		.container
			+e.content-row.row
				+e.filter-col.col-md-4.col-lg-3
					+e.f-items
						+filterItem('Фильтры', 'active')
							+e.plates-row.row.pb-3
								+plateRowItem('Живопись')
								+plateRowItem('Арт Деко')
								+plateRowItem('Экспрессионизм')
								+plateRowItem('Красный')
							+e.discard-btn(href='#') Сбросить все
						+filterItem('Категории')
							+cbGroup([
								'живопись',
								'графика',
								'принты',
								'скульптура',
								'диджитал арт',
								'фотография',
								'Тиражная графика',
							])
						+filterItem('темы')
							+cbGroup([
								'Абстракция',
								'Авангардизм',
								'Архитектура',
								'Города',
								'Деревенский мотив',
								'Экспрессионизм',
								'',
							])
						+filterItem('стиль')
							+cbGroup([
								'Абстракционизм',
								'Арт Деко',
								'Бюст',
								'Иллюстрация',
								'Импрессионизм',
								'Объект',
							])
						+filterItem('техника')
						+filterItem('цена', 'active')
							+e.range-wrap
								+range('80', '320000')
							+e.ok-btn(type='button') ok
						+filterItem('ориентация')
						+filterItem('размер')
						+filterItem('цвет', 'active')
							+e.chb-group-alt
								+customChB2('Мультицвет', 'color: #6f42c1; background-image: url(img/@2x/multicolor.png)')
