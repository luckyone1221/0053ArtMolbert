mixin cbGroup(Arr)
	+e.chb-group
		-for (let item of Arr)
			+customChBRow(item)

mixin filterItem(title, activeClass)
	+e.filter-item(class=activeClass)
		+e.head.free-dd-head-js=title
		+e.content.free-dd-content-js(class=activeClass)
			+e.content-inner
				if block
					block
				else
					+customChBRow('something')(checked)
			+e.hide-btn.f-hide-btn-js Скрыть

mixin plateRowItem(txt)
	.col-auto
		+e.plate(href='#')=txt

mixin customChBRow(txtVal, sqStyle)
	+e.chb-row.row.flex-nowrap.align-items-center
		.col
			if !sqStyle
				+customChB(txtVal)&attributes(attributes)
			else
				+customChB2(txtVal, sqStyle)&attributes(attributes)
		.col-auto
			+e.chb-txt 50

mixin customChB(txt='txt')
	+b.LABEL.custom-chb
		input(class='invisible' name='' type="checkbox")
		.square
		.cc-txt=txt

mixin customChB2(txt='txt', sqStyle='')
	+b.LABEL.custom-chb--color
		input(class='invisible' name='' type="checkbox")
		.square(style=`${sqStyle}`)
		.cc-txt=txt




