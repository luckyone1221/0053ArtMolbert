							+e.item-col.col-sm-6.col-lg-4
								+sNewSlide({
									txtItem: 'NEW',
									sale: false,
									imgNum: 1,
								})
							+e.item-col.col-sm-6.col-lg-4
								+sNewSlide({
									txtItem: 'NEW',
									sale: false,
									imgNum: 1,
								})
							+e.item-col.col-sm-6.col-lg-4
								+sNewSlide({
									txtItem: 'NEW',
									sale: false,
									imgNum: 1,
								})
					+pugin()

