				.col-auto
					+e.logo(href='#')
						img(loading="lazy" src='img/svg/logo.svg' alt="")
				.col
					+e.sub-row.row.justify-content-end.align-items-center
						.col-auto.d-none.d-md-block.me-xxl-3
