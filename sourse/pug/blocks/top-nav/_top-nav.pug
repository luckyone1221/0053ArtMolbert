mixin inpBlock()
	+b.mnu-search
		+e.btn(type='button')
			+icon('search')
		+inp3('Search', 'text')
		//-+e.INPUT.input(type="text" name='search')

mixin inp3(ph, type, val='', labelClass='custop-ph-label', name="name")
	.label(class=labelClass)
		+e.INPUT.input.form-control.has-ph-js(type=type name=name)&attributes(attributes)
		span.l-title=ph
		block

mixin iconLinksRow(addClasses)
	+b.il-row.row(class=addClasses)
		.col-auto
			+e.link
				+icon('heart')
		.col-auto
			+e.link
				+icon('user')
		.col-auto
			+e.link
				+icon('bag')