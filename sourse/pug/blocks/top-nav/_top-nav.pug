mixin mob-mnu()
	+b.menu-mobile--js.d-xl-none
		+b.toggle-menu-mobile--js
			span
		+e.inner
			+e.logo
				img(loading="lazy" src="img/svg/logo.svg" alt="")
			+mnu()
			+inpBlock()
			+iconLinksRow('d-sm-none')

mixin top-nav() 
	// start top-nav
	+b.top-nav.block-with-lazy
