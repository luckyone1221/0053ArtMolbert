//- pugination
mixin pugin()
	.pagination-wrapper
		ul
			mixin li(n)
				li
					if n
						a.page-numbers(href='#')= n 
					else
						block
			+li()
				span.prev.page-numbers
					img(src="img/svg/prev.svg" alt="")
			+li()
				span.prev.page-numbers
					img(src="img/svg/prev-start.svg" alt="")
			+li(1)
			+li()
				span.page-numbers ...
			+li(6)
			+li()
				span.page-numbers.current  7
			+li(8)
			+li()
				span.page-numbers ...
			+li(56)
			// - for (var x = 1; x < 5; x++)
			// 	+li(x)
			+li()
				a.next.page-numbers(href='#')
					img(src="img/svg/next.svg" alt="")
			+li()
				a.next.page-numbers(href='#')
					img(src="img/svg/next-end.svg" alt="")